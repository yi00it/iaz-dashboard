{
  "name": "iaz-dashboard",
  "version": "1.0.0",
  "description": "World-class Vanilla JavaScript dashboard grid & layout builder â€” zero dependencies",
  "type": "module",
  "main": "./dist/iaz-dashboard.umd.js",
  "module": "./dist/iaz-dashboard.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/iaz-dashboard.esm.js",
      "require": "./dist/iaz-dashboard.umd.js"
    },
    "./dist/iaz-dashboard.css": "./dist/iaz-dashboard.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "dashboard",
    "grid",
    "layout",
    "drag-drop",
    "resize",
    "vanilla-js",
    "vanilla-javascript",
    "zero-dependency",
    "gridstack",
    "widget",
    "responsive",
    "typescript",
    "drag-and-drop",
    "grid-layout",
    "dashboard-builder"
  ],
  "author": {
    "name": "Yigit"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yi00it/iaz-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/yi00it/iaz-dashboard/issues"
  },
  "homepage": "https://github.com/yi00it/iaz-dashboard#readme",
